# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token
TELEGRAM_ADMIN_ID=your_admin_id
TELEGRAM_ADMIN_USERNAME=your_admin_username

# PostgreSQL Database
DATABASE_URL=postgresql://username:password@localhost:5432/bot_marketplace
# TRON Network
TRON_PRIVATE_KEY=your_master_private_key
TRON_API_URL=https://api.trongrid.io
TRON_API_KEY=your_api_key_here
TRON_EXPLORER_URL=https://tronscan.org

# Security
ENCRYPTION_KEY=your_32_byte_encryption_key

# Configuration
MIN_DEPOSIT_TRX=1
MIN_WITHDRAWAL_TRX=1
AMOUNT_PER_REFERRAL=10.0
DEPOSIT_TO_MAIN_WALLET_RATE=0.9
WITHDRAWAL_FEE_RATE=0.01
TRANSFER_FEE_RATE=0.005          # 0.5% transfer fee from earnings to ads
MIN_TRANSFER_TRX=1               # minimum integer amount for internal transfer
TRANSFER_INTEGER_ONLY=true       # only whole-number TRX amounts allowed for transfer
HISTORY_PAGE_SIZE=3

# Sponsor commission on campaign recharge (percentage, e.g., 10 = 10%)
SPONSOR_RECHARGE_COMMISSION_PERCENT=10

# Participation rewards and commissions (percentages)
# User receives this percent of campaign's AMOUNT_PER_REFERRAL upon successful validation
PARTICIPATION_USER_REWARD_PERCENT=75
# Sponsor receives this percent of campaign's AMOUNT_PER_REFERRAL upon successful validation
SPONSOR_PARTICIPATION_COMMISSION_PERCENT=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/bot_marketplace.log
ERROR_LOG_FILE=logs/errors.log

# Scheduler Intervals (minutes)
DEPOSIT_MONITOR_INTERVAL_MINUTES=1            # how often to scan for new deposits
WITHDRAWAL_PROCESSOR_INTERVAL_MINUTES=1       # how often to process withdrawals
